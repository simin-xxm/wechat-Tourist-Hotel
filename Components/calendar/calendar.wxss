
  
  .bg-img{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    filter: blur(20px);
    z-index: -1;
    transform: scale(1.2);
  }
  
  .content{
    width: 90vw;
    height: 70vh;
    background: white;
    border-radius: 20rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    z-index: 1;
  }
  
  .con_top{
    width: 100%;
    height: 15%;
    border-bottom: 1px solid #ccc;
    display: flex;
  }

  .content .stroke text{
    text-align: center;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-top:20rpx;
  }
  .content .stroke{
    width: 50%;
    height: 100%;
  }
  
  /* 日历 */
  
  .calendar {
    width: 100%;
    height: 85%;
    text-align: center;
    font-size: 30rpx;
    box-sizing: border-box;
  }
  

/* 标题 */

.calendar-title {
    width: 100%;
    height: 15%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 35rpx;
}

.calendar-title .ctrl {
    display: inline-block;
    padding: 0 20rpx;
    background: #f5f5f5;
    border-radius: 10rpx;
}

.calendar-title .item {
    display: inline-block;
    vertical-align: middle;
    line-height: 50rpx;
}

.calendar-title .title {
    min-width: 300rpx;
    text-align: center;
}

.calendar-title .today {
    float: right;
    margin-top: 10rpx;
}

/* 星期 */

.calendar-week {
    display: flex;
    text-align: center;
    padding: 20rpx 10rpx;
    box-sizing: border-box;
}

.calendar-week .item {
    flex: 1;
}

/* 日期 */

.calendar-container {
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx 10rpx;
    box-sizing: border-box;
}

.calendar-container .grid {
    display: inline-block;
    width: 14.28571428571429%;
    line-height: 70rpx;
    position: relative;
    z-index: 1;
}

.calendar-container .grid .self {
    position: absolute;
    top: 0rpx;
    right: 0rpx;
    width: 15rpx;
    height: 15rpx;
    border-radius: 50%;
    background: rgb(49, 120, 228);
    border: 3rpx solid #fff;
}

.calendar-container .grid.gray {
    color: #ccc;
}

.calendar-container .grid .wrap.select {
    background: rgb(49, 120, 228);
    border-radius: 10rpx;
    color: #fff;
    width: 80%;
    margin: 0 auto;
}
.calendar .btn{
    width: 80%;
    height: 12%;
    background: seagreen;
    border-radius: 50rpx;
    margin: auto;
    margin-top: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color:white;
    font-size: 30rpx;
}