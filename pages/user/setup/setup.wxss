

page{
  padding: 15px;
  box-sizing: border-box;
}

.System_bar{
  width: 100%;
  box-sizing: border-box; 
}
.System_bar image{
  width: 45rpx;
  height: 45rpx;
}
.txt{
  font-size: 45rpx;
  font-weight: bold;
}

.tab{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom:2PX solid #F5F5F5;
  font-size: 28rpx;
  font-weight: 600;
}
.tab image{
  width: 42rpx;
  height: 42rpx;
}
.c{color: #ccc;}
.btn{
  width: 90%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 100rpx;
  border-radius: 80rpx;
  background-color: #ccc;
  color: white;
}
