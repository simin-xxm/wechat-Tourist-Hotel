image{
  width: 100%;
  height: 100%;
}
.body{
  width: 100vw;
  height: 100vh;
  background-image: url('http://img4.imgtn.bdimg.com/it/u=3260640670,2926964956&fm=15&gp=0.jpg');
  background-size: cover;
}
.System_bar{
  width: 100vw;
}
.body .body_top{
  width: 100%;
  height: 250rpx;
  margin-top: 150rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.body .body_top .icon{
  width: 120rpx;
  height: 120rpx;
}
.body .body_top text{
  width: 100vw;
  text-align: center;
  font-size: 30rpx;
}

.body .body_bottom{
  width: 100%;
  height: 300rpx;
  margin-top: 350rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.body .body_bottom .body_bottom_btn{
  width: 80%;
  height: 115rpx;
  background: #36CFC9;
  border-radius: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 40rpx;
}
.body .body_bottom_btn{
  font-size: 28rpx;
  color: white;
}