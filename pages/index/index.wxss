/**index.wxss**/
page{width: 100vw;height: 100vh;background-color: #F7F7F7;display: flex;justify-content: center;flex-wrap: wrap;}

.index_body{width: 100%;height: 100%;z-index:99;}


image{width: 100%;height: 100%;}

.head{width: 100%;height: 80%;position: relative;}
.head_img{width: 100%;height: 90%;background-image: url("https://w.wallhaven.cc/full/0w/wallhaven-0w78er.jpg");background-repeat: no-repeat;background-size: 100%;box-shadow: 0 -50px 50px  white inset,
    0 -50px 50px  white inset;}
.head .head_top{position: absolute;top: 0;width: 100%;height: 30%;}
.head .head_top .tou{width: 100rpx;height: 100rpx;margin-top: 30rpx;border-radius: 50%;margin-left: 50rpx;overflow: hidden;}
.head .head_txt{position: absolute;top: 40%;left: 8%;width: 90%;height: 10%;display: flex;align-items: center;font-size: 45rpx;color: white;font-weight: bold;font-family: '楷体';}
.head .head_bottom{position: absolute;top: 50%;width: 100%;height: 50%;display: flex;justify-content: center;flex-wrap: wrap;}
.head .head_box{width: 85%;height: 80%;border-radius: 30px;padding: 30rpx 30rpx 0px 30rpx;background: white;}
.head .box_head{width: 100%;height: 20%;border-radius: 30px;margin-top: 20rpx;display: flex;align-items: center;box-shadow: 1px 1px 5px #ccc;}
.head .box_head_icon{width: 50rpx;height: 50rpx;margin-left: 30rpx;}
.head .box_head text{font-size: 28rpx;font-weight: bold;color: #ccc;margin-left: 30rpx;}
.head .box_content{width: 100%;height: 25%;margin-top: 30rpx;display: flex;}
.head .box_content_left{width: 50%;height: 100%;display: flex;flex-wrap: wrap;justify-content: center;align-items: center;border-right: 1rpx solid black;}
.head .box_content_left #txt_1{color: rgb(131, 131, 131);font-size: 30rpx;}
.head .box_content_right{width: 50%;height: 100%;display: flex;flex-wrap: wrap;justify-content: center;align-items: center;}
.head .box_btn{width: 100%;height: 23%;border-radius: 30px;margin-top: 50rpx;background: #13C2C2;color:white;font-size: 35rpx;display: flex;justify-content: center;align-items: center;}

/* 最近搜索 */
.title{width: 90%;height: 40px;display: flex;align-items: center;margin-bottom: 20rpx;font-weight: bold;}

.scroll_box{width: 100%;height: 350rpx;overflow: hidden;padding-left: 40rpx;white-space: nowrap;}
.scroll_box .item_list{width: 250rpx;height: 350rpx;margin-right: 23rpx;display: inline-block;background: white;overflow: hidden;border-radius: 20rpx;}
.scroll_box .item_img{width: 100%;height: 60%;background-size: 100% 100%;}
.scroll_box .item_text_tlt{width: 100%;margin-top: 10rpx;margin-left: 10rpx;}
.scroll_box .item_txt_t{color: #ccc;font-size: 30rpx;margin-left: 10rpx;}

/* 最受欢迎的旅游神圣地 */
.scroll_box_lv{width: 100%;height: 200rpx;overflow: hidden;padding-left: 40rpx;white-space: nowrap;}

.scroll_box_lv .item_list{width: 350rpx;height: 200rpx;margin-right: 20rpx;display: inline-block;position: relative;background-size: 100% 100%;overflow: hidden;border-radius: 20rpx;}
.scroll_box_lv .title{position: absolute;top: 55%;left: 5%;color: white;font-size: 33rpx;}
/* 最实惠的价格 */

.label{width: 90%;height: 250rpx;display: flex;border-radius: 30rpx;overflow: hidden;margin-bottom: 40rpx;}
.label .label_img{width: 40%;height: 100%;background-size: cover;}
.label .label_con{width: 60%;height: 100%;background-color: white;}
.label .label_con_head{padding:10rpx 20rpx;width: 100%;height: 40%;display: flex;flex-wrap: wrap;}
.label .label_con_bottom{width: 100%;height: 50%;display: flex;}
.label .label_con_bottom #jl{width: 60%;height: 100%;display: flex;flex-wrap: wrap;}
.label .label_con_bottom .icon{width: 30rpx;height: 30rpx;margin-left: 20rpx;}
.label .label_con_bottom #jl text{font-size: 28rpx;color: #ccc;margin-left: 10rpx;}
.label .label_con_bottom .jl_top{width: 100%;height: 60%;display: flex;align-items: center;}
.label .label_con_bottom .jl_bottom{width: 100%;height: 40%;margin-left: 20rpx;}
.label .label_con_bottom .jl_bottom image{width: 30rpx;height: 30rpx;}
.label .label_con_bottom #jg{width: 40%;height: 100%;display: flex;flex-wrap: wrap;align-items: center;justify-content: center;}
