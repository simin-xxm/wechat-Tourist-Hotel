/* pages/index/search/search.wxss */

page{
  width: 100%;
  height: 100%;
}
image {
  width: 100%;
  height: 100%;
}
.head{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.head .return{
  width: 8%;
  height: 60%;
  margin-left: 30rpx;
}
.head text{
  font-size: 35rpx;
}

.body{
  width: 100%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
/* 搜索框 */
.body .box_head{
  width: 85%;
  height: 80rpx;
  border-radius: 30px;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 1px 1px 5px #ccc;
}
.body .box_head_icon{
  width: 50rpx;
  height: 50rpx;
  margin-left: 30rpx;
}
.box_head input{
  font-size: 28rpx;
  font-weight: bold;
  color: #ccc;
  margin-left: 30rpx;
}
.body .note{
  width:90%;
  height: 100rpx;
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}
.body .card{
  width: 90%;
  height: 400rpx;
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
}
.body .card_box{
  width: 48%;
  height: 100%;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 1px 3px 3px #ccc;
}

.body .card_box_top{
  width: 100%;
  height: 60%;
  background-size: cover;
}
.body .card_box_bottom{
  width: 100%;
  height: 40%;
  font-weight: bold;
  padding: 10rpx 20rpx;
}


