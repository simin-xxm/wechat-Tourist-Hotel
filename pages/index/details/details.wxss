/* pages/index/details/details.wxss */

page{
  padding: 20px;
  box-sizing: border-box;
}

image{
  width: 100%;
  height: 100%;
}
.System_bar{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.System_bar image{
  width: 50rpx;
  height: 50rpx;
}
.box{
  width: 100%;
  height: 500rpx;
  margin-bottom: 20rpx;
  box-shadow: 1px 5px 3px #ccc;
}
.box_img{
    width: 100%;
    height: 65%;                                                                                        
}
.box_con{
  width: 100%;
  height: 35%;
  display: flex;
}
.box_left{
  width: 65%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  padding-left: 50rpx;
}
.box_right{
  width: 35%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.box .btn{
  width: 70%;
  height: 50%;
  background: #13C2C2;
  border-radius: 60rpx;
  margin: auto;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
