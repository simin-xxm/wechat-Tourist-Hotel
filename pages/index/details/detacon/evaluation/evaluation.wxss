
page{
  padding: 15px;
  box-sizing: border-box;
}

image{
  width: 100%;
  height: 100%;
}
.System_bar{
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box; 
}
.System_bar image{
  width: 45rpx;
  height: 45rpx;
}
.pl{
  margin-top: 20rpx;
  width: 100%;
  height: 100rpx;
  font-size: 40rpx;
  font-weight: 700;
  border-bottom: 1px solid #f5f5f5;
}
.comment{
  width: 100%;
  box-sizing: border-box;
  padding-top: 10px;
  border-bottom: 2px solid #f5f5f5;
}
.comment .com_top{
  width: 100%;
  height: 50%;
  display: flex;
}
.comment .com_left{
  width: 50%;
  height: 100%;
  display: flex;
}
.comment .com_left .txt{
height: 80%;
margin-top: 20rpx;
margin-left: 20rpx;
}
.comment .icon{
  width: 110rpx;
  height: 110rpx;
  border-radius: 110rpx;
  overflow: hidden;
  background-size: cover; 
}
.comment .com_right{
  width: 50%;
  height: 100%;
  display: flex;
  box-sizing: border-box;
  padding-left:40rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  flex-direction: row-reverse;
}
.comment .com_right view{
  width: 100%;
}
.comment .com_right view:first-child{
  margin-left: 70%;
}
.star {
  margin-left: 40%;
}
.star  image{
  width: 30rpx;
  height: 30rpx;
}
.com_bottom{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  margin-top: 20rpx;
  font-size: 30rpx;
  width: 100%;
  /* height: 50%; */
  font-size: 28rpx;
  color: #ccc;
}
.com_bottom .text{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}