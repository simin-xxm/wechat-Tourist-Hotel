
.bg-img{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  filter: blur(20px);
  z-index: -1;
  transform: scale(1.2);
}

.content{
  width: 90vw;
  height: 60vh;
  background: white;
  border-radius: 50rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  overflow: hidden;
}
.content .box{
  width: 100%;
  height: 25%;
  box-sizing: border-box;
  padding-left: 50rpx;
  padding-right: 30rpx;
  display: flex;
  border-bottom: 2px solid #FCFCFC;
}
.content .box_left{
  width: 65%;
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}
.content .box_right{
  width: 35%;
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.content .box_right image{
  width: 50rpx;
  height: 50rpx;
}
.btn{
  width: 90%;
  height: 100rpx;
  background-color: #13C2C2;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: auto;
  margin-top: 50rpx;
  border-radius: 80rpx;
  color: white;
  font-size: 38rpx;
}

